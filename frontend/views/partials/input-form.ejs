<% if (!locals.noSessions) { %>
    <div class="gptv4-input-wrapper" <%= locals.isLoading ? 'style="opacity: 0.6; pointer-events: none;"' : '' %>>
        <form action="/chat#loading-anchor" method="post" class="gptv4-input-bar">
            <input type="hidden" name="sessionId" value="<%= sessionId %>">
            <div class="gptv4-input-container">
                <textarea
                    name="message"
                    placeholder="<%= locals.isLoading ? 'Processing...' : 'Message AI' %>"
                    required
                    maxlength="2000"
                    rows="1"
                    class="gptv4-input"
                    <%= locals.isLoading ? 'disabled' : '' %>
                ></textarea>

                <button type="submit" class="gptv4-send-btn" aria-label="Send message" <%= locals.isLoading ? 'disabled' : '' %>>
                    <span class="gptv4-send-icon">â†—</span>
                </button>
            </div>
        </form>
    </div>

    <style>
        /* Ensure the main chat area can contain absolutely positioned elements */
        .gptv4-main {
            position: relative;
        }

        .gptv4-input-wrapper {
            position: absolute;
            bottom: 1.5rem;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 800px;
            z-index: 1000;
            padding: 0;
        }

        .gptv4-input-bar {
            background: #fff;
            border-radius: 12px;
            padding: 0.5rem;
            border: 1px solid #d1d5db;
        }

        .gptv4-input-container {
            display: flex;
            gap: 0.5rem;
            align-items: flex-end;
        }

        .gptv4-input {
            flex: 1;
            min-height: 40px;
            max-height: 120px;
            padding: 0.75rem;
            border: none;
            border-radius: 8px;
            background: #fff;
            resize: none;
            font-family: inherit;
            font-size: 1rem;
            line-height: 1.4;
            transition: background-color 0.2s ease;
        }

        .gptv4-input:focus {
            outline: none;
            background: #f9fafb;
        }

        .gptv4-send-btn {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            border: none;
            background: #1f2937;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.2s ease;
            flex-shrink: 0;
        }

        .gptv4-send-btn:hover {
            background: #374151;
        }

        .gptv4-send-btn:disabled {
            background: #d1d5db;
            cursor: not-allowed;
        }

        /* Auto-resize textarea */
        .gptv4-input {
            overflow-y: hidden;
        }

        /* Mobile responsive */
        @media (max-width: 768px) {
            .gptv4-input-wrapper {
                bottom: 1rem;
                left: 50%;
                width: 95%;
                transform: translateX(-50%);
            }

            .gptv4-input-bar {
                padding: 0.5rem;
            }

            .gptv4-input {
                min-height: 36px;
                padding: 0.625rem;
                font-size: 16px; /* Prevents zoom on iOS */
            }

            .gptv4-send-btn {
                width: 36px;
                height: 36px;
                font-size: 1rem;
            }
        }

        /* Ensure content doesn't get hidden behind input */
        .gptv4-center-area {
            padding-bottom: 120px !important;
        }

        @media (max-width: 768px) {
            .gptv4-center-area {
                padding-bottom: 100px !important;
            }
        }
    </style>
<% } %>